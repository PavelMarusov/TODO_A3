<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272424"
    android:orientation="vertical"
    android:backgroundTint="#060B27"
    android:padding="8dp"
    tools:context="com.presentation.main.MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frst_layout"
        android:layout_width="344dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="8dp"
        android:foregroundGravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_layout"
        android:padding="16dp">

        <TextView
            android:id="@+id/category"
            android:layout_width="88dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_text"
            android:gravity="center"
            android:text="Category"

            android:textColor="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/quest"
            android:layout_width="312dp"
            android:layout_height="48dp"
            android:layout_marginTop="48dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Собери друзей на природе"
            android:textColor="#191818"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category" />

        <TextView
            android:id="@+id/price"
            android:layout_width="48dp"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Price"
            android:textSize="15dp"
            android:textColor="#191818"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/free"
            android:layout_width="48dp"
            android:layout_height="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="free"
            android:textSize="15dp"
            android:textColor="#191818"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@id/price"
            app:layout_constraintLeft_toLeftOf="parent" />

       <ImageView
           android:id="@+id/acces_imageView"
           android:layout_width="40dp"
           android:layout_height="40dp"
           app:layout_constraintTop_toBottomOf="@+id/quest"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           android:layout_marginTop="45dp"
           android:src="@drawable/ic_group"/>

        <TextView
            android:id="@+id/text_participant"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Participant"
            android:textColor="#191818"
            android:textSize="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="30dp"
            android:indeterminate="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Accessibility"
            android:textColor="#191818"
            android:textSize="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/text_participant"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="347dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="19dp"
        android:background="@drawable/bg_button"
        android:text="Next"
        app:layout_constraintTop_toBottomOf="@id/frst_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#ffffff"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/price_text"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="Category"
        android:textColor="#ffffff"
        android:textSize="15dp" 
        app:layout_constraintTop_toBottomOf="@+id/next_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/category_text"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="Price"
        android:textColor="#ffffff"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/next_btn"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"/>

    <Spinner
        android:id="@+id/spiner"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="#ffff"
        app:layout_constraintTop_toBottomOf="@+id/price_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:entries="@array/type"/>
    <me.bendik.simplerangeview.SimpleRangeView
        android:id="@+id/price_sb"
        android:background="@drawable/bg_seekbar"
        android:layout_width="160dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/category_text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:count="10"
        app:movable="true"
        app:start="1"
        app:end="10"
        />
    <TextView
        android:id="@+id/acces_text"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:textColor="#ffffff"
        android:text="Accessibility"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/price_sb"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"/>
    <me.bendik.simplerangeview.SimpleRangeView
        android:id="@+id/accesibility_sb"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_seekbar"
        app:layout_constraintTop_toBottomOf="@+id/acces_text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:count="10"
        app:movable="true"
        app:start="1"
        app:end="10"
        />


    


</androidx.constraintlayout.widget.ConstraintLayout>